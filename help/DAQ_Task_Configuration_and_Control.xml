  <LANGUAGE>eng</LANGUAGE>
  <TITLE>DAQ Task Configuration and Control</TITLE>
  <TYPE>DAQ Toolbox Functions</TYPE>
  <DATE>20-Dec-2007</DATE>
  <SHORT_DESCRIPTION name="DAQ_Task_Configuration_and_Control"> DAQ_CreateTask, DAQ_LoadTask, DAQ_StartTask, DAQ_StopTask, DAQ_ClearTask, DAQ_IsTaskDone, DAQ_ResetDevice</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ taskHandle, status ] = DAQ_CreateTask ( taskName )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ taskHandle, status ] = DAQ_LoadTask ( taskName )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_StartTask ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_StopTask ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>  
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_ClearTask ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ isTaskDone, status ] = DAQ_IsTaskDone ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_ResetDevice ( deviceName )
    </P>
    </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
  <PARAM_INDENT>

    <PARAM_ITEM>
    <PARAM_NAME>taskName</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : string
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>taskHandle</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : mlist (type "daq")
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>isTaskDone</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : boolean
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    
    <PARAM_ITEM>
    <PARAM_NAME>deviceName</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : string
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>status</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : integer
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
  </PARAM_INDENT>
  </PARAM>
 
  <DESCRIPTION>
     <DESCRIPTION_INDENT>
     <DESCRIPTION_ITEM>
     <P>
     <BD>DAQ_FunctionName</BD> provides just an interface to
     <BD>DAQmxBaseFunctionName</BD>.
     </P>
     <P>
     For more detailed information about the interfaced functions,
     please refer to <EM>NI-DAQmx Base 2.x C Function Reference Help</EM>.
     </P>
     </DESCRIPTION_ITEM>
     </DESCRIPTION_INDENT>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[
