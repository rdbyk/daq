<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>DAQ Triggering</TITLE>
  <TYPE>DAQ Toolbox Functions</TYPE>
  <DATE>20-Dec-2007</DATE>
  <SHORT_DESCRIPTION name="DAQ_Triggering">DAQ_DisableStartTrig, DAQ_CfgDigEdgeStartTrig, DAQ_CfgAnlgEdgeStartTrig, DAQ_DisableRefTrig, DAQ_CfgDigEdgeRefTrig, DAQ_CfgAnlgEdgeRefTrig</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_DisableStartTrig ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_CfgDigEdgeStartTrig ( taskHandle, triggerSource, triggerEdge )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_CfgAnlgEdgeStartTrig ( taskHandle, triggerSource, triggerSlope, triggerLevel )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_DisableRefTrig ( taskHandle )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_CfgDigEdgeRefTrig ( taskHandle, triggerSource, triggerEdge, pretriggerSamples )
    </P>
    </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>
    <P>
    [ status ] = DAQ_CfgAnlgEdgeRefTrig ( taskHandle, triggerSource, triggerSlope, triggerLevel, pretriggerSamples )
    </P>
    </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
  <PARAM_INDENT>
    
    <PARAM_ITEM>
    <PARAM_NAME>taskHandle</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : mlist (type "daq")
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>triggerSource</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : string
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>triggerEdge</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : integer
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>triggerSlope</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : integer
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>triggerLevel</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : double
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>pretriggerSamples</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : integer
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
    <PARAM_ITEM>
    <PARAM_NAME>status</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : integer
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
    
  </PARAM_INDENT>
  </PARAM>
 
  <DESCRIPTION>
     <DESCRIPTION_INDENT>
     <DESCRIPTION_ITEM>
     <P>
     <BD>DAQ_FunctionName</BD> provides just an interface to
     <BD>DAQmxBaseFunctionName</BD>.
     </P>
     <P>
     For more detailed information about the interfaced functions,
     please refer to <EM>NI-DAQmx Base 2.x C Function Reference Help</EM>.
     </P>
     </DESCRIPTION_ITEM>
     </DESCRIPTION_INDENT>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[
   Your NI-DAQmx Base 2.x installation contains a number of tutorial examples
   written in C, please refer to them.
   
   By default, they are located in
   
   /usr/local/natinst/nidaqmxbase/examples (Linux)
   
   or
   
   C:\Program Files\National Instruments\NI-DAQmx Base\Examples (Windows).
  ]]></EXAMPLE>

